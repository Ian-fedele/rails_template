<h1>Add a New Song</h1>

<%= form_with model: @song, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :artist_id, "Artist" %>
    <%= form.collection_select :artist_id, Artist.all, :id, :name, prompt: "Choose an artist", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :playlist_id, "Add to Playlist" %>
    <%= form.collection_select :playlist_id, current_user.playlists, :id, :name, prompt: "Choose a playlist", class: "form-control" %>
  </div>

<div class="form-group">
  <%= form.submit "Create Song", class: "btn btn-primary" %>
  </div>
  <%= link_to "Back", root_path, class: "btn btn-secondary mt-3" %>
<% end %>
